rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 인증된 사용자만 접근 가능 (기본 규칙)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // users 컬렉션
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // teams 컬렉션
    match /teams/{teamId} {
      allow read, write: if request.auth != null;
    }

    // team_members 컬렉션
    match /team_members/{memberId} {
      allow read, write: if request.auth != null;
    }

    // announcements 컬렉션
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        resource.data.author_id == request.auth.uid;
    }

    // items 컬렉션 (명시적 추가)
    match /items/{itemId} {
      allow read, write: if request.auth != null;
    }

    // purchase_requests 컬렉션 (명시적 추가)
    match /purchase_requests/{requestId} {
      allow read, write: if request.auth != null;
    }

    // routines 컬렉션 (명시적 추가)
    match /routines/{routineId} {
      allow read, write: if request.auth != null;
    }

    // routine_completions 컬렉션 (명시적 추가)
    match /routine_completions/{completionId} {
      allow read, write: if request.auth != null;
    }

    // bills 컬렉션 (명시적 추가)
    match /bills/{billId} {
      allow read, write: if request.auth != null;
    }

    // bill_payments 컬렉션 (명시적 추가)
    match /bill_payments/{paymentId} {
      allow read, write: if request.auth != null;
    }
  }
}
